<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Eservices_gov" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/selver_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorEdgeEffect">@color/selver_dark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/white</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>

    </style>


    <style name="TransparentView">
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
        <item name="itemIconSize">23dp</item>
        <item name="itemIconPadding">20dp</item>
        <item name="itemTextAppearance">@style/TextViewStyle</item>
        <item name="itemHorizontalPadding">19dp</item>
    </style>


    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/amariya_heavy</item>
        <item name="android:textSize">20dp</item>
        <item name="android:actionMenuTextColor">@color/selver_dark</item>

    </style>

    <style name="tabTextAppearance" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/amariya_heavy</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="titleTableStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/amariya_bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/text_color1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
    </style>
    <style name="valueTableStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/amariya_light</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/text_color3</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="valueTableStyle2" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/amariya_light</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="Theme.Eservices_gov.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Theme.Eservices_gov.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Eservices_gov.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>