<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Eservices_gov" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/selver_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorEdgeEffect">@color/selver_dark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/amariya_heavy</item>
        <item name="android:textSize">20dp</item>
        <item name="android:actionMenuTextColor">@color/selver_dark</item>

    </style>

    <style name="tabTextAppearance" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/amariya_heavy</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="titleTableStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/amariya_bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/text_color1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
    </style>
    <style name="valueTableStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/amariya_light</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/text_color3</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="valueTableStyle2" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/amariya_light</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
    </style>
</resources>