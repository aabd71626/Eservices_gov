<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="195dp"
    android:paddingRight="8dp"
    android:paddingLeft="6dp"
    android:background="@color/white"
    android:layoutDirection="rtl">

    <ImageView
        android:id="@+id/custom_view_link_button_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:src="@drawable/ic_document"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/custom_view_link_button_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amariya_light"
        android:gravity="center_vertical"
        tools:text="استمارة اخر \nراتب"
        android:textColor="@color/text_color3"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/custom_view_link_button_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amariya_light"
        android:gravity="center_vertical"
        tools:text="شهر يونيو, 2021"
        android:textColor="@color/text_color2"
        android:visibility="gone"
        android:textSize="20dp" />
</LinearLayout>